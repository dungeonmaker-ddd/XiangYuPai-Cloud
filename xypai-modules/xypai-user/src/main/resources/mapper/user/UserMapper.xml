<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xypai.user.mapper.UserMapper">

    <resultMap type="com.xypai.user.domain.entity.User" id="UserResult">
        <id property="userId" column="user_id"/>
        <result property="deptId" column="dept_id"/>
        <result property="username" column="user_name"/>
        <result property="nickname" column="nick_name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phonenumber"/>
        <result property="gender" column="sex"/>
        <result property="avatar" column="avatar"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="delFlag" column="del_flag"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginDate" column="login_date"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="deptName" column="dept_name"/>
    </resultMap>

    <sql id="selectUserVo">
        select u.user_id,
               u.dept_id,
               u.user_name,
               u.nick_name,
               u.email,
               u.avatar,
               u.phonenumber,
               u.password,
               u.sex,
               u.status,
               u.del_flag,
               u.login_ip,
               u.login_date,
               u.create_by,
               u.create_time,
               u.update_by,
               u.update_time,
               u.remark,
               d.dept_name
        from sys_user u
                 left join sys_dept d on u.dept_id = d.dept_id
    </sql>

    <select id="selectByUsername" parameterType="String" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.user_name = #{username} and u.del_flag = 0
    </select>

    <select id="selectByEmail" parameterType="String" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.email = #{email} and u.del_flag = 0
    </select>

    <select id="selectByPhone" parameterType="String" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.phonenumber = #{phone} and u.del_flag = 0
    </select>

    <select id="selectUserPage" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.del_flag = 0
        <if test="query.username.isPresent()">
            AND u.user_name like concat('%', #{query.username.get}, '%')
        </if>
        <if test="query.nickname.isPresent()">
            AND u.nick_name like concat('%', #{query.nickname.get}, '%')
        </if>
        <if test="query.email.isPresent()">
            AND u.email like concat('%', #{query.email.get}, '%')
        </if>
        <if test="query.phone.isPresent()">
            AND u.phonenumber like concat('%', #{query.phone.get}, '%')
        </if>
        <if test="query.gender.isPresent()">
            AND u.sex = #{query.gender.get}
        </if>
        <if test="query.deptName.isPresent()">
            AND d.dept_name like concat('%', #{query.deptName.get}, '%')
        </if>
        <if test="query.status.isPresent()">
            AND u.status = #{query.status.get}
        </if>
        order by u.create_time desc
    </select>

    <select id="selectByDeptId" parameterType="Long" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.dept_id = #{deptId} and u.del_flag = 0
        order by u.create_time desc
    </select>

    <select id="selectByStatus" parameterType="Integer" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.status = #{status} and u.del_flag = 0
        order by u.create_time desc
    </select>

    <select id="selectUserCount" resultType="Long">
        select count(1)
        from sys_user
        where del_flag = 0
    </select>

    <select id="selectActiveUserCount" resultType="Long">
        select count(1)
        from sys_user
        where status = 0
          and del_flag = 0
    </select>

    <select id="selectByUserIds" resultMap="UserResult">
        <include refid="selectUserVo"/>
        where u.user_id in
        <foreach item="userId" collection="userIds" open="(" separator="," close=")">
            #{userId}
        </foreach>
        and u.del_flag = 0
    </select>

    <update id="updateLoginInfo">
        update sys_user
        set login_ip   = #{loginIp},
            login_date = sysdate()
        where user_id = #{userId}
    </update>

    <update id="updateUserStatus">
        update sys_user set status = #{status}
        where user_id in
        <foreach item="userId" collection="userIds" open="(" separator="," close=")">
            #{userId}
        </foreach>
    </update>

    <select id="existsUsername" resultType="boolean">
        select count(1) > 0 from sys_user
        where user_name = #{username}
        <if test="excludeUserId != null">
            and user_id != #{excludeUserId}
        </if>
        and del_flag = 0
    </select>

    <select id="existsEmail" resultType="boolean">
        select count(1) > 0 from sys_user
        where email = #{email}
        <if test="excludeUserId != null">
            and user_id != #{excludeUserId}
        </if>
        and del_flag = 0
    </select>

    <select id="existsPhone" resultType="boolean">
        select count(1) > 0 from sys_user
        where phonenumber = #{phone}
        <if test="excludeUserId != null">
            and user_id != #{excludeUserId}
        </if>
        and del_flag = 0
    </select>

</mapper>
