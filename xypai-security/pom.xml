<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.xypai</groupId>
        <artifactId>xypai</artifactId>
        <version>3.6.6</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <!-- 🔐 安全认证模块 -->
    <artifactId>xypai-security</artifactId>
    <name>xypai-security</name>
    <packaging>pom</packaging>
    <description>XY02:02 相遇派安全认证统一管理</description>

    <modules>
        <!-- 🔗 安全认证：接口模块 -->
        <module>security-interface</module>
        <!-- 🛡️ 安全认证：OAuth2核心 -->
        <module>security-oauth</module>
        <!-- 🌐 安全认证：Web管理端 -->
        <module>security-web</module>
    </modules>

    <!-- 依赖管理 -->
    <dependencyManagement>
        <dependencies>
            <!-- 🔗 安全接口模块 -->
            <dependency>
                <groupId>com.xypai</groupId>
                <artifactId>security-interface</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <!-- 🌐 Spring Cloud 基础依赖 -->
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-bootstrap</artifactId>
        </dependency>

        <!-- 🔐 Spring Security OAuth2 -->
        <dependency>
            <groupId>org.springframework.security.oauth</groupId>
            <artifactId>spring-security-oauth2</artifactId>
            <version>2.5.2.RELEASE</version>
        </dependency>

        <!-- 📊 监控和健康检查 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
    </dependencies>

    <url>https://xypai.com</url>
</project>
